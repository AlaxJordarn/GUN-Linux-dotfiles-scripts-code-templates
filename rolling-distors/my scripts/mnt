if [ $z = a ]
then
sudo umount -a	
rmdir --ignore-fail-on-non-empty /home/$(whoami)/disks/*
rmdir --ignore-fail-on-non-empty /home/$(whoami)/disks


else
p=$(lsblk  -o label /dev/sdb"$z" | tail -1)
sudo umount   /home/$(whoami)/disks/"$p"

#disksctl unmount -b /dev/sdb$z;
sudo rmdir --ignore-fail-on-non-empty /home/$(whoami)/disks/"$p"
#rmdir --ignore-fail-on-non-empty /home/$(whoami)/disks/
fi
fi

